{% extends 'usersBase.html.twig' %}

{% block body %}

<div class="table-responsive">
    <h1>Competitions enfant Disponibles</h1>

    <table class="table" id="adherentTableau">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Location</th>
                <th scope="col">Debut</th>
                <th scope="col">Fin</th>
                {% if kids is not empty %}
                    {% for kid in kids %}
                        <th>{{ kid.getPrenom() }}</th>
                    {% endfor %}
                {% endif %}
                
            </tr>
        </thead>
        <tbody>
            {% for competition in availableCompetitions %}
            <tr>
                <td>{{ competition.nom }}</td>
                <td>{{ competition.location }}</td>
                <td>{{ competition.startDate|date('d-m-Y') }}</td>
                <td>{{ competition.endDate|date('d-m-Y') }}</td>
                
                {% if kids is not empty %}
                    {% for kid in kids %}
                        <td><a href="{{ path('app_inscription_kids_competition', {'kid_id': kid.id, 'competition_id': competition.id}) }}" class="btn btn-primary">Inscrire {{ kid.getPrenom() }}</a></td>
                    {% endfor %}
                {% else %}
                    <td colspan="{{ kids|length + 4 }}">Vous n'avez ajouté aucun enfant pour le moment.</td>
                {% endif %}
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% if kids is not empty %}
<h1 class="mt-3 mb-5">Mes compétitions pour enfants :</h1>
    {% for kid in kids %}
        <h3>Compétitions pour {{ kid.getPrenom() }}</h3>
        <table class="table" id="adherentTableau">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Location</th>
                    <th>Debut</th>
                    <th>Fin</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
               {% for competition in kid.getKidsCompetitions() %}
    <tr>
        <td>{{ competition.nom }}</td>
        <td>{{ competition.location }}</td> 
        <td>{{ competition.startDate|date('d-m-Y') }}</td>
        <td>{{ competition.endDate|date('d-m-Y') }}</td>
        <td>
            <a href="{{ path('app_desinscription_kids_competition', {'kid_id': kid.id, 'competition_id': competition.id}) }}" class="btn btn-danger">Se désinscrire</a>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="5">Aucune compétition inscrite pour cet enfant.</td>
    </tr>
{% endfor %}
            </tbody>
        </table>
    {% endfor %}
{% else %}
    <p>Vous n'avez ajouté aucun enfant pour le moment.</p>
{% endif %}

{% endblock %}
