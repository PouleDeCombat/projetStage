{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="container mt-5 mb-5" style="height: 50vh; display: flex; align-items: center;">
    <div class="row justify-content-center w-100">
        <div class="col-md-6">
            <div class="card border-warning shadow">
                <div class="card-header bg-warning text-dark text-center">
                    <h5 class="mb-0">Réinitialiser votre mot de passe</h5>
                </div>
                <div class="card-body bg-secondary text-white">
                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-dark" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    {{ form_start(resetForm) }}

    {# Affichez le premier champ #}
    <div class="mb-3">
        {{ form_label(resetForm.plainPassword.first, 'Nouveau mot de passe') }}
        {{ form_widget(resetForm.plainPassword.first) }}
        {{ form_errors(resetForm.plainPassword.first) }}
    </div>
    
    {# Affichez le deuxième champ #}
    <div class="mb-3">
        {{ form_label(resetForm.plainPassword.second, 'Répéter le mot de passe') }}
        {{ form_widget(resetForm.plainPassword.second) }}
        {{ form_errors(resetForm.plainPassword.second) }}
    </div>

    <button class="btn btn-warning">Réinitialiser le mot de passe</button>

{{ form_end(resetForm) }}

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
