{% extends 'adminBase.html.twig' %}

{% block title %}Cours index{% endblock %}

{% block body %}
    <h1>Cours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Discipline</th>
                <th>Niveau</th>
                <th>Start</th>
                <th>End</th>
                <th>Background_color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cour in cours %}
            <tr>
                <td>{{ cour.id }}</td>
                <td>{{ cour.Discipline }}</td>
                <td>{{ cour.Niveau }}</td>
                <td>{{ cour.start ? cour.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cour.end ? cour.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cour.backgroundColor }}</td>
                <td>
                    <a href="{{ path('app_cours_show', {'id': cour.id}) }}">show</a>
                    <a href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cours_new') }}">Create new</a>
{% endblock %}
