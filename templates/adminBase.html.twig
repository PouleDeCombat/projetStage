    <script>
    function getTimeFromISOString(isoString) {
    const date = new Date(isoString);
    const hours = String(date.getUTCHours()).padStart(2, '0');
    const mins = String(date.getUTCMinutes()).padStart(2, '0');
    return `${hours}:${mins}`;
}



        document.addEventListener('DOMContentLoaded', function() {
  var calendarEl = document.getElementById('calendarAdmin');
  
  var calendar = new FullCalendar.Calendar(calendarEl, {
      
      initialView: 'timeGridWeek',
      locale: 'fr',
      timeZone: 'Europe/Paris',
      headerToolbar: {
          start: 'prev, next today',
          center: 'title',
          end: 'timeGridWeek'
      },
      events: {{ data|raw }},
      eventClick: function(info) {
          let coursId = info.event.id;
          window.location.href = `/cours/coursDetail/${coursId}`; 
      },
      eventContent: function(arg) {
          let discipline = arg.event.extendedProps.discipline;
          let niveau = arg.event.extendedProps.niveau;
           let startTime = arg.event.start ? getTimeFromISOString(arg.event.start.toISOString()) : 'N/A';
    let endTime = arg.event.end ? getTimeFromISOString(arg.event.end.toISOString()) : 'N/A';
          let element = document.createElement('div');
          element.innerHTML = `${discipline} - ${niveau} <br> ${startTime} - ${endTime}`;

          element.className = 'text-center mt-2';
          return { domNodes: [element] };
      },
  });
  
  calendar.render();
});
    </script>
    
{% endif %}

